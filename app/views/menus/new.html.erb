<% content_for(:title, 'Create new menu') %>
<%= form_for @menu, :html => {:class => "form-horizontal"} do |f| %>
  <%= render 'shared/errors', object: @menu %>
  <%= render 'form', f: f %>

  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-4'>
      <%= f.submit "Create Menu", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
