<div class='form-group'>
  <%= f.label :username, nil, class: 'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= f.text_field :username, class: 'form-control' %>
  </div>
</div>

<div class='form-group'>
  <%= f.label :password, nil, class: 'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= f.password_field :password, class: 'form-control' %>
  </div>
</div>

<div class='form-group'>
  <%= f.label :password_confirmation, nil, class: 'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
</div>

<div class='form-group'>
  <%= f.label :role, nil, class: 'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= f.select :role, options_for_select(%w[Administrator TA Owner]), {}, class: 'form-control' %>
  </div>
</div>

<div class='form-group'>
  <div class='col-sm-offset-2 col-sm-4'>
    <%= f.submit "Register User", class: 'btn btn-success' %>
  </div>
</div>
